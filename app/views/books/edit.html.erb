<div class="edit-box">
    <h1 class="edit-title">
    	<strong>Editing Book</strong>
    	</h1>

	<%= form_for(@book) do |f| %>
	    <div class="edit-field">
	    	<h4>Title</h4>
	        <%= f.text_field :title %>
	    </div>
	    <div class="edit-field">
	    	<h4>Body</h4>
	        <%= f.text_area :body %>
	    </div>
	    <div class="edit-field">
	    	<%= f.submit 'Update Book' %>
	    </div>
	    <% end %>
    <div class="edit-botan">
    	<%= link_to "Show", book_path(@book) %>
    </div>
    <div class="edit-botan">
    	<p> | </p>
    </div>
	<div class="edit-botan">
		<%= link_to "Back", books_path(@book) %>
	</div>
</div>
